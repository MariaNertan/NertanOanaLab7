<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NertanOanaLab7.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="eu.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="O imagine reprezentativă pentru mine" />

            <Label
                Text="Bine ai venit în aplicația mea personalizată!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Aceasta este aplicația mea multi-platformă. Sper să îți placă!"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="CounterBtn"
                Text="Descopera mai mult" 
                SemanticProperties.Hint="Apasă pentru a descoperi mai multe funcționalități"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
